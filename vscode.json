// plugins
// Advanced New File
// Beautify
// EditorConfig
// ESLint
// HTMLHint
// Sass Lint
// Seti-theme
// Surround
// TSLint
// Vim
// Place your settings in this file to overwrite the default settings
{
  "editor.lineHeight": 22,
  "editor.tabSize": 2,
  "editor.cursorBlinking": "solid",
  "editor.renderIndentGuides": true,
  "editor.fontFamily": "Fira Code",
  "workbench.welcome.enabled": false,
  "workbench.colorTheme": "Seti",
  "workbench.iconTheme": "vs-seti",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSolidBlockCursor": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.insertModeKeyBindings": [{
    "before": ["j", "j"],
    "after": ["<Esc>"]
  }],
  "vim.otherModesKeyBindingsNonRecursive": [{
      "before": ["<leader>", ";"],
      "after": ["A", ";", "<Esc>"]
    },
    {
      "before": ["<leader>", "c"],
      "after": ["A", ",", "<Esc>"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    }
  ],
  "vim.leader": ",",
  "newFile.defaultBaseFileName": "newFile",
  "newFile.relativeTo": "file", // "root" or "project"
  "newFile.defaultFileExtension": ".js",
  "newFile.rootDirectory": "~",
  "newFile.showFullPath": true
}
